@model DALNorthWind.Models.Customer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutPages.cshtml";
}

<div class="text-primary">
    <h2>Delete Customer</h2>
</div>
<h3>Are you sure you want to delete this?</h3>
<div ng-controller="customer">
    <h4>Customer</h4>
    <hr />
    <dl class="row" data-ng-init="getCustomerById(@Convert.ToInt32(Context.Request.RouteValues["id"]))">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            {{ customer.firstName }}
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            {{ customer.lastName }}
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            {{ customer.city }}
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            {{ customer.country }}
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            {{ customer.phone }}
        </dd>
    </dl>

    <form>
        <input type="hidden" ng-model="customer.id" />
        <div class="form-group mt-2">
            <button ng-click="deleteCustomer(customer.id)" value="Delete" class="btn btn-danger"><i class="bi bi-trash3"></i>&nbsp;Delete</button>
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </form>
</div>

<script src="~/scripts/Customer.js"></script>
