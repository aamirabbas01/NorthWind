@model DALNorthWind.Models.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutPages.cshtml";
}

<div class="text-primary">
    <h2>Edit Customer</h2>
</div>
<hr />
<div class="row" ng-controller="customer">
    <div class="col-md-4" data-ng-init="getCustomerById(@Convert.ToInt32(Context.Request.RouteValues["id"]))">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" ng-model="customer.id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input ng-model="customer.firstName" class="form-control" />
                @*<span asp-validation-for="FirstName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input ng-model="customer.lastName" class="form-control" />
                @*<span asp-validation-for="LastName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input ng-model="customer.city" class="form-control" />
                @*<span asp-validation-for="City" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input ng-model="customer.country" class="form-control" />
                @*<span asp-validation-for="Country" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input ng-model="customer.phone" class="form-control" />
                @*<span asp-validation-for="Phone" class="text-danger"></span>*@
            </div>
            <div class="form-group mt-2">
                <button value="Save" class="btn btn-primary" ng-click="updateCustomer(@Convert.ToInt32(Context.Request.RouteValues["id"]), customer)"><i class="bi bi-pencil-square"></i>&nbsp;Save</button>
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<script src="~/scripts/Customer.js"></script>

