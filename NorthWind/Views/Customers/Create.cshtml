@model DALNorthWind.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutPages.cshtml";
}
<div class="text-primary">
    <h2>Create Customer</h2>
</div>
<hr />
<div class="row" ng-controller="customer">
    <div class="col-md-4">

        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input ng-model="customer.FirstName" class="form-control" />
            @*<span asp-validation-for="FirstName" class="text-danger"></span>*@
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input ng-model="customer.LastName" class="form-control" />
            @*<span asp-validation-for="LastName" class="text-danger"></span>*@
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input ng-model="customer.City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country" class="control-label"></label>
            <input ng-model="customer.Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input ng-model="customer.Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="hidden" ng-model="customer.Id" value="0" />
            <button ng-click="addCustomer(customer)" value="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp;Create</button>
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
        
    </div>
</div>
<script src="~/scripts/Customer.js"></script>


